
<div class='main-navigation-container'>
    <div class='main-navigation-logo-wrapper'>
        Logo
        
        <h2><%= current_user.username if logged_in?(:site_admin, :user) %></h2>
    </div>

    <div class='main-navigation-links-wrapper'>
        <%= link_to 'Home', root_path, class: 'nav-link' %>
        <%= link_to 'Options', options_path, class: 'nav-link' %>
        <%= link_to 'Posts', posts_path, class: 'nav-link' %>
    </div>

    <div class='main-navigation-auth-links-wrapper'>
        <% if logged_in?(:site_admin, :user) %>
            <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        <% else %>
            <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
        <% end %>
    </div>
</div>